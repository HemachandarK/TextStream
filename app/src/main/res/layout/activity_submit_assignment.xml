<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#F3F4F6">

        <TextView
            android:id="@+id/tvFileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No file selected"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Assignment (PDF)"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEncrypt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <!-- Log Section -->
        <TextView
            android:id="@+id/tvLogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity Log"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#EDEDED"
            android:padding="8dp"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/tvLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No activity yet."
                android:textColor="#333333"
                android:textSize="14sp" />
        </ScrollView>

    </LinearLayout>

    <!-- Encryption Animation Overlay -->
    <RelativeLayout
        android:id="@+id/encryptionOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0"
        android:visibility="gone"
        android:clickable="true">

        <!-- File icon that will be picked up -->
        <TextView
            android:id="@+id/fileIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“„"
            android:textSize="64sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp" />

        <!-- Character (boy) that moves -->
        <LinearLayout
            android:id="@+id/characterContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-120dp"
            android:layout_marginTop="180dp">

            <TextView
                android:id="@+id/character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš¶"
                android:textSize="80sp" />

            <!-- File in hand (initially hidden) -->
            <TextView
                android:id="@+id/fileInHand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“„ðŸ”"
                android:textSize="32sp"
                android:visibility="gone"
                android:layout_marginTop="-20dp" />

        </LinearLayout>

        <!-- Encryption sparks/effects -->
        <TextView
            android:id="@+id/encryptionEffect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ¨ðŸ”âœ¨"
            android:textSize="48sp"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <!-- Status text at bottom -->
        <TextView
            android:id="@+id/tvEncryptionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preparing submission..."
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:gravity="center" />

    </RelativeLayout>

</FrameLayout>